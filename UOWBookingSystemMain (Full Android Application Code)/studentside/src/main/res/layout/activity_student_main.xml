<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/source_code_pro"
        android:text="Welcome, \nStudent"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSuperStu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView"
        android:layout_marginTop="12dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="-30dp" />

    <ImageButton
        android:id="@+id/LogoutbtnMainStu"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:layout_below="@id/textView"
        android:layout_marginTop="14dp"
        android:background="@drawable/logout"
        app:layout_constraintBottom_toBottomOf="@+id/toolbarSuperStu"
        app:layout_constraintEnd_toEndOf="@+id/toolbarSuperStu"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/toBookButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="60dp"
        android:background="@color/mainBlue"
        android:fontFamily="@font/source_code_pro"
        android:text="Book A Room"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/toManageButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="68dp"
        android:background="@color/mainBlue"
        android:fontFamily="@font/source_code_pro"
        android:text="Manage Bookings"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toBookButton" />
</androidx.constraintlayout.widget.ConstraintLayout>